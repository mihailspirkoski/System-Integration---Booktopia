@model List<Booktopia.Domain.DomainModels.Order>


    <div class="mt-4">
        <a class="btn btn-light btn-outline-secondary" asp-controller="Order" asp-action="ExportAllOrders">Export All Orders</a>
    </div>


<div class="container mt-4">


    <table class="table mt-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Customer Details</th>
                <th scope="col">Number of products</th>
                <th></th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];

            <tr>
                <th scope="row">@(i+1)</th>
                <td>@item.User.Email</td>
                <td>@item.BooksInOrder.Count()</td>
                <td></td>
                @*<td><a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a></td>*@
                <td><a class="btn btn-light btn-outline-secondary" asp-action="CreateInvoice" asp-route-id="@item.Id">Create Invoice</a></td>
            </tr>

            }
        </tbody>


    </table>

</div> 